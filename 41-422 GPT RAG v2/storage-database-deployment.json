{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Primary location for all resources."
      }
    },
    // Existing params for these resources:
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the storage account."
      }
    },
    "keyVaultName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Key Vault."
      }
    },
    "sqlServerName": {
      "type": "string",
      "metadata": {
        "description": "Name of the SQL Server."
      }
    },
    "databaseName": {
      "type": "string",
      "defaultValue": "db01",
      "metadata": {
        "description": "Name of the SQL database."
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username for the SQL Server."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password for the SQL Server."
      }
    },

    // Additional for private endpoints:
    "networkIsolation": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "If true, deploy private endpoints for Storage, Key Vault, and SQL."
      }
    },
    "vnetName": {
      "type": "string",
      "defaultValue": "vnet-default",
      "metadata": {
        "description": "Virtual Network name if networkIsolation is true."
      }
    },
    "privateEndpointSubnetName": {
      "type": "string",
      "defaultValue": "app-int-subnet",
      "metadata": {
        "description": "Name of the subnet to place private endpoints in, if networkIsolation is enabled."
      }
    },
    "azureStorageAccountPe": {
      "type": "string",
      "defaultValue": "storage-pe",
      "metadata": {
        "description": "Name of the Storage Account Private Endpoint."
      }
    },
    "azureKeyvaultPe": {
      "type": "string",
      "defaultValue": "kv-pe",
      "metadata": {
        "description": "Name of the Key Vault Private Endpoint."
      }
    },
    "azureDbAccountPe": {
      "type": "string",
      "defaultValue": "sql-pe",
      "metadata": {
        "description": "Name of the SQL Server Private Endpoint."
      }
    }
  },
  "variables": {
    "storageAccountSku": "Standard_LRS",
    "keyVaultSku": "standard",
    "sqlServerVersion": "12.0",
    "sqlDatabaseEdition": "Basic"
  },
  "resources": [
    // 1) Storage Account
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2021-09-01",
      "name": "[parameters('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[variables('storageAccountSku')]"
      },
      "kind": "StorageV2",
      "properties": {}
    },

    // 2) Key Vault
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2021-06-01-preview",
      "name": "[parameters('keyVaultName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "family": "A",
          "name": "[variables('keyVaultSku')]"
        },
        "tenantId": "[subscription().tenantId]",
        "accessPolicies": []
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
      ]
    },

    // 3) SQL Server
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2021-02-01-preview",
      "name": "[parameters('sqlServerName')]",
      "location": "[parameters('location')]",
      "properties": {
        "administratorLogin": "[parameters('adminUsername')]",
        "administratorLoginPassword": "[parameters('adminPassword')]",
        "version": "[variables('sqlServerVersion')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
      ]
    },

    // 4) SQL Database
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2021-02-01-preview",
      "name": "[format('{0}/{1}', parameters('sqlServerName'), parameters('databaseName'))]",
      "location": "[parameters('location')]",
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "edition": "[variables('sqlDatabaseEdition')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
      ]
    },

    // ======================
    // 5) Private Endpoints
    // ======================
    // Deploy these if "networkIsolation" is true.
    {
      "condition": "[parameters('networkIsolation')]",
      "type": "Microsoft.Network/privateEndpoints",
      "apiVersion": "2021-05-01",
      "name": "[parameters('azureStorageAccountPe')]",
      "location": "[parameters('location')]",
      "properties": {
        "subnet": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('privateEndpointSubnetName'))]"
        },
        "privateLinkServiceConnections": [
          {
            "name": "storage-blob-conn",
            "properties": {
              "privateLinkServiceId": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
              "groupIds": [ "blob" ]
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
      ]
    },
    {
      "condition": "[parameters('networkIsolation')]",
      "type": "Microsoft.Network/privateEndpoints",
      "apiVersion": "2021-05-01",
      "name": "[parameters('azureKeyvaultPe')]",
      "location": "[parameters('location')]",
      "properties": {
        "subnet": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('privateEndpointSubnetName'))]"
        },
        "privateLinkServiceConnections": [
          {
            "name": "kv-conn",
            "properties": {
              "privateLinkServiceId": "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]",
              "groupIds": [ "vault" ]
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
      ]
    },
    {
      "condition": "[parameters('networkIsolation')]",
      "type": "Microsoft.Network/privateEndpoints",
      "apiVersion": "2021-05-01",
      "name": "[parameters('azureDbAccountPe')]",
      "location": "[parameters('location')]",
      "properties": {
        "subnet": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('privateEndpointSubnetName'))]"
        },
        "privateLinkServiceConnections": [
          {
            "name": "sql-conn",
            "properties": {
              "privateLinkServiceId": "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]",
              "groupIds": [ "sqlServer" ]
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
      ]
    }
  ],
  "outputs": {
    "storageAccountId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
    },
    "keyVaultId": {
      "type": "string",
      "value": "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
    },
    "sqlServerId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
    },
    "databaseId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Sql/servers/databases', parameters('sqlServerName'), parameters('databaseName'))]"
    }
  }
}
